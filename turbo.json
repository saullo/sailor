{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".output/**", ".tanstack/**"]
		},
		"start": {
			"dependsOn": ["^start"]
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"format": {
			"dependsOn": ["^format"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}
